<li class="status<%= media_type_class status %>">
	<% if status.post_type == "Article" %>
		<%= render 'statuses/article_listing', article: status.post %>
	<% else %>
		<% if status.user==current_user %>
			<ul class="actions">
				<li><%= link_to "ðŸ“ Edit", edit_signal_boost_path(status.post) %></li>
				<li><%= link_to "âŒ Remove", status.post, method: "delete" %></li>
			</ul>
		<% end %>
		<h4 class="heading byline status-boost">
			ðŸ“£ Signal boosted
			<% unless @user == status.user %>
				by       <%= link_to status.user.name, status.user, class: 'user-name-listing' %>
			<% end %>
			<% if status.post.comment.present? %>
				with comment:
			<% end %>
		</h4>
		<% if status.post.comment.present? %>
			<p class="signal-boost-comment"><%= render 'articles/content', content: status.post.comment %></p>
		<% end %>
		<h3 class="landmark page-landmark">Begin quotation</h3>
		<div class="status-quotation">
			<% if status.post.origin %>
				<%= render 'statuses/article_listing', article: status.post.origin %>
			<% else %>
				(This post has been deleted.)
			<% end %>
		</div>
	<% end %>
</li>